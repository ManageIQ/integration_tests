management_systems:
    vsphere5:
        name: vsphere 5
        default_name: Virtual Center (10.0.0.2)
        credentials: vsphere5-credential_name_from_credentials.yaml
        hostname: vsphere5.example.com
        ipaddress: 10.0.0.1
        host_vnc_port:
            start: 5900
            end: 5980
        server_zone: default
        type: virtualcenter
        discovery_range:
            start: 10.0.0.1
            end: 10.0.0.2
        clusters:
            - iscsi
        hosts:
            - name: myhost
              credentials: myhost
        datastores:
            - iscsi
        tags:
            Provisioning Scope: All
        policy_profiles:
            - example policy profile x
        test_vm_power_control:
            - vm_name
    rhevm31:
        name: RHEV 3.1
        default_name: RHEV-M (10.0.0.3)
        credentials: rhevm31-credential_name_from_credentials.yaml
        cu_credentials: rhevm31-cu_db_cred_name_from_credentials.yaml
        hostname: rhevm.example.com
        ipaddress: 10.0.0.1
        server_zone: default
        api_port: 3000
        type: rhevm
        discovery_range:
            start: 10.0.0.3
            end: 10.0.0.3
        clusters:
            - iscsi
        hosts:
            - name: myhost
              credentials: myhost
        datastores:
            - iscsi
        tags:
            Provisioning Scope: All
        policy_profiles:
            - example policy profile y
        test_vm_power_control:
            - vm_name
    ec2:
        name: EC2 US East
        default_name: EC2 US East
        credentials: aws
        hostname: ec2.us-east-1.amazonaws.com
        ipaddress: 207.171.162.181
        server_zone: default
        type: ec2
        clusters:
            - us-east-1
        tags:
            Provisioning Scope: All
