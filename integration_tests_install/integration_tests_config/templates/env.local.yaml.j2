{% if base_url is defined %}
appliances:
    - hostname: {{ base_url }}
{% endif %}
browser:
    webdriver: Remote
    webdriver_options:
        desired_capabilities:
            platform: LINUX
{% if browser == 'c' %}
            browserName: 'chrome'
            chromeOptions:
                args: ['--no-sandbox', '--whitelisted-ips 0.0.0.0']
{% elif browser == 'f' %}
            browserName: firefox
{% endif %}
            # unexpectedAlertBehaviour: 'ignore'
